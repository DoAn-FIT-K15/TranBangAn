@using FashionGo.Models.Entities
@using FashionGo.Models
@model IEnumerable<Product>
@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_ClearLayout.cshtml";
}

<div class="eshop-shopping-cart">
    <div class="page-header clearfix eshop-product-title">
        <h1 class="page-title eshop-product-title" style="font-family: Arial; text-transform: none; font-weight:100;">
            @ViewBag.Title
        </h1>
    </div>
    <table class="table table-bordered">
        <tr style="font-family:Arial;">
            <th style="font-family: Arial; text-transform: none; font-weight:400;">ẢNH</th>
            <th style="font-family: Arial; text-transform: none; font-weight:100;">SẢN PHẨM</th>
            <th style="font-family: Arial; text-transform: none; font-weight:100;">MÀU</th>
            <th style="font-family: Arial; text-transform: none; font-weight:100;">SIZE</th>
            <th style="font-family: Arial; text-transform: none; font-weight:100;">GIÁ BÁN</th>
            <th style="font-family: Arial; text-transform: none; font-weight:100;">SỐ LƯỢNG</th>
            <th style="font-family: Arial; text-transform: none; font-weight:100;">THÀNH TIỀN</th>
        </tr>
        @foreach (Product p in Model)
        {
            <tr id="row-@p.Id">
                <td class="muted eshop-center-text">
                    <img src="@p.FeaturedImage" style="width: 52px; height: auto;" />
                </td>
                <td>
                    <h4 class="eshop-product-title">
                        <a href="@Url.RouteUrl("ProductDetails", new { id = p.Id, slug = p.Name.ToAscii() })" target="_blank" style="font-family:Arial;">
                            @p.Name
                        </a>
                    </h4>

                </td>

                <td>
                    <select data-id="@p.Id" name="color" class="color spcolor">
                        <option value="@p.ColorDefaut">@p.ColorDefaut</option>
                        @foreach (var data in p.Color)
                        {
                            var selected = p.ColorDefaut == data.ColorName ? "selected" : "";
                            <option value="@data.ColorName" @selected>@data.ColorName</option>
                        }
                    </select>
                </td>
                <td>
                    <select data-id="@p.Id" name="size" class="size spsize">
                        <option value="@p.SizeDefaut">@p.SizeDefaut</option>
                        @foreach (var data in p.Size)
                        {
                            var selected = p.SizeDefaut == data.SizeName ? "selected" : "";
                            <option value="@data.SizeName" @selected>@data.SizeName</option>
                        }
                    </select>
                </td>

                <td class="price"data-price="@p.PriceAfter"  style="font-family:Arial;">
                    @Html.FormatValue(p.PriceAfter, "{0:0,0}")<sup> đ</sup>
                </td>
                <td>
                    <input type="number" min="1" onchange="updateQuantity(this)" class="input-mini quantity" value="@p.Amount" name="quantity[@p.Id]" data-id="@p.Id" id="quantity_@p.Id" style="font-family:Arial;" />
                    <a class="eshop-remove-item-cart btn text-danger" href="#" data-id="@p.Id" onclick="return deleteFromCart(@p.Id);" title="Xóa khỏi giỏ hàng" style="font-family:Arial;">
                        <i class="fa fa-times"></i>
                    </a>
                </td>
                <td>
                    <span id="Amount-@p.Id">
                        @Html.FormatValue(p.PriceAfter * p.Amount, "{0:0,0}")
                    </span><sup></sup>
                </td>
            </tr>
        }
        <tr>
            <th colspan="4" style="text-align:right" style="font-family:Arial;">Tổng cộng:</th>
            <th>
                <strong><span class="brand-primary-color nn-cart-total" style="font-family:Arial;">@Html.FormatValue(ShoppingCart.Cart.Total, "{0:0,0}")</span><sup></sup></strong>
            </th>
        </tr>
    </table>

    <div class="row">
        <div class="col-md-4 col-xs-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>
                            <label for="coupon_code" class="control-label" style="font-family:Arial; font-size:14px;"><strong style="font-family: Arial; text-transform: none;font-weight: 100;">Nhập mã Coupon: </strong></label>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div>
                                <div class="controls">
                                    <input type="text" id="coupon_code" name="coupon_code" class="input-large" value="">
                                    <button type="button" class="btn btn-small btn-danger" onclick="applyCoupon();" style="font-family: Arial; text-transform: none;font-weight: 100;">Kiểm tra</button>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <div class="eshop-cart-checkout">

        <form action="/Cart/Clear" method="post">
            <a href="@Url.RouteUrl("Home")" class="btn btn-success pull-left" style="font-family: Arial; text-transform: none;font-weight: 100;">
                <i class="fa fa-shopping-bag"></i> THÊM SẢN PHẨM KHÁC
            </a>
            <a href="@Url.RouteUrl("Checkout")" class="btn btn-primary pull-right" style="font-family: Arial; text-transform: none;font-weight: 100;">
                <i class="fa fa-cart-arrow-down"></i> Đặt Hàng
            </a>
            <button class="btn btn-default pull-right" onclick="return confirm('Xác nhận bạn muốn xóa giỏ hàng?');">
                <i class="fa fa-trash"></i> Xóa giỏ hàng
            </button>
        </form>
    </div>

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script>

    $('select.size-select').on('change', function () {
        var selectedValue = $(this).val();
        var id = $(this).closest('tr').find("input[name='Id']").val();

        if ($(this).hasClass('size-select')) {
            // Xử lý khi chọn select size
            $.ajax({
                url: '@Url.Action("Update", "GioHang")',
                type: 'POST',
                data: { Id: id, SizeId: selectedValue },
                success: function(result) {
                    // Xử lý kết quả trả về nếu cần
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    // Xử lý lỗi nếu cần
                }
            });
        }
    });
    $(function () {
        // Xóa khỏi giỏ
        $(".remove-from-cart").click(function () {
            pid = $(this).attr("data-id");
            tr = $(this).parents("tr");// tim <tr> chua <img> bi click
            $.ajax({
                url: "/Cart/Remove",
                data: { id: pid },
                success: function (response) {
                    $("#nn-cart-count").html(response.Count);
                    $(".nn-cart-total").html(response.Total);
                    tr.hide(500);
                    if (response.Total == 0) {
                        window.location.href = '/Home/Index';

                    }
                }

            });
        });



</script>


<script>
    // Hàm cập nhật tổng tiền cho một sản phẩm
    function updateTotalForProduct(productId, newQuantity) {
        var price = parseFloat($(`#row-${productId}`).find('.price').data('price'));
        var newTotal = price * newQuantity;
        $(`#Amount-${productId}`).text(newTotal.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }));
    }

    // Hàm cập nhật tổng tiền cho toàn bộ giỏ hàng
    function updateCartTotal() {
        var total = 0;
        $('.quantity').each(function () {
            var productId = $(this).data('id');
            var quantity = parseInt($(this).val());
            var price = parseFloat($(`#row-${productId}`).find('.price').data('price'));
            total += price * quantity;
        });
        $('.nn-cart-total').text(total.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }));
    }

    // Hàm xử lý sự kiện change
    function updateQuantity(element) {
        var productId = $(element).data('id');
        var newQuantity = parseInt($(element).val());
        updateTotalForProduct(productId, newQuantity);
        updateCartTotal();
    }

    // Gắn sự kiện change vào các input số lượng khi trang được tải
    $(document).ready(function () {
        $('.quantity').on('change', function () {
            updateQuantity(this);
        });
        updateCartTotal();
    });
</script>




