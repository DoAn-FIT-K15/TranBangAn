@model IEnumerable<FashionGo.Models.Entities.Product>
@using FashionGo.Models

@if (!Model.Any())
{
    <div class="eshop-content-empty" style="font-family:Arial;">
        Bạn chưa có sản phẩm nào trong giỏ!
    </div>
}
else
{
    <div class="eshop-mini-cart-info">
        <span class="wait"></span>
        <table class="eshop-table-border" cellpadding="0" cellspacing="0" width="100%">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="eshop-image" width="25%">
                            <h4 class="eshop-product-title">
                                <a href="@Url.RouteUrl("ProductDetails", new { id = item.Id, slug = item.Name.ToAscii() })" style="font-family:Arial;">
                                    <img src="@item.FeaturedImage.Replace("uploads/", "uploads/_thumbs/")" style="width: 36px;" />
                                </a>
                            </h4>
                        </td>
                        <td class="eshop-name" width="45%" style="font-family:Arial;">
                            <a href="@Url.RouteUrl("ProductDetails", new { id = item.Id, slug = item.Name.ToAscii() })">
                                @item.Name
                            </a>
                        </td>
                        <td class="eshop-quantity" style="font-family:Arial;">
                            @item.Amount&nbsp;x
                        </td>
                        <td class="eshop-total" style="font-family:Arial;">
                            @Html.FormatValue(item.PriceAfter, "{0:0,0}")đ
                        </td>
                        <td class="eshop-remove">
                            <a class="btn eshop-remove-item" href="#" data-id="@item.Id" onclick="return deleteFromCart(@item.Id);">
                                <i class="fa fa-times"><span class="text-hide" style="font-family: Arial; text-transform: none;font-weight: 100;" >Xóa</span></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="mini-cart-total clearfix">
        <table cellpadding="0" cellspacing="0" align="right">
            <tbody>
                <tr>
                    <td class="eshop-right" style="font-family: Arial; text-transform: none;font-weight: 100;" ><strong>Tổng cộng:&nbsp;</strong></td>
                    <td class="eshop-left"><span class="eshop-price" style="font-family: Arial; text-transform: none;font-weight: 100;" >@Html.FormatValue(ShoppingCart.Cart.Total, "{0:0,0}")đ</span></td>
                </tr>
               
            </tbody>
        </table>
    </div>
    <div class="eshop-checkout clearfix">
        <a class="btn btn-default pull-left" href="@Url.RouteUrl("ShopingCart")" style="font-family: Arial; text-transform: none;font-weight: 100;" >Xem giỏ hàng</a>
        <a href="@Url.RouteUrl("Checkout")" class="btn btn-danger pull-right " style="font-family: Arial; text-transform: none;font-weight: 100;" ><i class="fa fa-cart-arrow-down"></i> Đặt Hàng</a>
    </div>
    
}
