        @using (Html.BeginForm("OderPurchased", "Order", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <text>
                <input type="submit" value="Đơn Hàng Đã Mua" class="btn btn-link" />
            </text>
        }

        @using (Html.BeginForm("Logout", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <text>
                <input type="submit" value="Đăng Xuất" class="btn btn-link" />
            </text>
        }

    </dl>
</div>
