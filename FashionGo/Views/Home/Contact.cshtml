@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_ClearLayout.cshtml";
}

<style>
    /* CSS for banner area */
    .banner-area {
        position: relative;
    }

        .banner-area .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #919191;
        }

        .banner-area .container {
            position: relative;
            z-index: 1;
        }

        .banner-area .about-content {
            text-align: center;
        }

        .banner-area h1 {
            color: #fff;
        }

        .banner-area p {
            color: #fff;
        }

    /* CSS for contact page area */
    .contact-page-area {
        padding: 80px 0;
    }

        .contact-page-area .contact-btns {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            border: 1px solid #ddd;
            padding: 15px;
        }

            .contact-page-area .contact-btns .left-icon {
                margin-right: 15px;
            }

            .contact-page-area .contact-btns .arrow-right {
                margin-left: 15px;
            }

            .contact-page-area .contact-btns .text {
                flex: 1;
            }

                .contact-page-area .contact-btns .text h4 {
                    margin-bottom: 5px;
                }

                .contact-page-area .contact-btns .text span {
                    font-size: 14px;
                    color: #777;
                }

            .contact-page-area form .common-input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                margin-bottom: 20px;
            }

            .contact-page-area form .common-textarea {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                margin-bottom: 20px;
                resize: vertical;
                min-height: 150px;
            }

            .contact-page-area form .animation-btn {
                background-color: #000;
                color: #fff;
                padding: 10px 30px;
                border: none;
                cursor: pointer;
            }

        .contact-page-area .alert-msg {
            margin-top: 20px;
            text-align: left;
        }

        /* CSS for map */
        .contact-page-area iframe {
            margin-top: 60px;
        }
</style>
