@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Quản lý vai trò";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}


<p>
    @Html.ActionLink("Tạo mới", "Create",null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-striped datatable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-xs btn-primary" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-warning" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-danger" })
            </td>
        </tr>
    }

</table>
@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}