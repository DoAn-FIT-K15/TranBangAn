@model IEnumerable<FashionGo.Models.Entities.Manufact>

@{
    ViewBag.Title = "Quản lý nhà sản xuất";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới", "Create",null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
           Nhà sản xuất
        </th>
        <th>
            Mô tả 
        </th>
        <th>Tác vụ</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.Logo" style="max-width: 48px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id } ,new { @class = "btn btn-xs btn-primary" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }, new { @class = "btn btn-xs btn-warning" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id }, new { @class = "btn btn-xs btn-danger" })
        </td>
    </tr>
}

</table>
