@model FashionGo.Models.Entities.Coupon

@{
    ViewBag.Title = "Chỉnh sửa mã khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}



@using (Html.BeginForm())
{
