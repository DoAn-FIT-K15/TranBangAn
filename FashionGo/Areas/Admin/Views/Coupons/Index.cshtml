@model IEnumerable<FashionGo.Models.Entities.Coupon>

@{
    ViewBag.Title = "Quản lý khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới", "Create",null, new { @class = "btn  btn-primary" })
</p>
<table class="table table-bordered datatable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountForId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LimitedUsed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountFor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountForId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LimitedUsed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Code }, new { @class = "btn btn-xs btn-primary" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Code }, new { @class = "btn btn-xs btn-warning" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Code }, new { @class = "btn btn-xs btn-danger" })
        </td>
    </tr>
}

</table>
