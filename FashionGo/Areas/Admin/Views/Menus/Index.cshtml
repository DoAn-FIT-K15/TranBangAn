@model IEnumerable<FashionGo.Models.Entities.Menu>

@{
    ViewBag.Title = "Quản lý menu";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<p>
    @Html.ActionLink("Thêm mới", "Create",null, new { @class = "btn  btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MenuLocation.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Target)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MenuLocation.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Target)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }, new { @class = "btn btn-xs btn-primary" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }, new { @class = "btn btn-xs btn-warning" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id }, new { @class = "btn btn-xs btn-danger" })
        </td>
    </tr>
}

</table>
