@model IEnumerable<FashionGo.Models.Entities.Colors>

@{
    ViewBag.Title = "Danh sách màu sắc sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới", "CreatePropertiesColor", null, new { @class = "btn btn-primary" })
</p>
<form asp-controller="Products" asp-action="ListProductsColor">
    <p>
        Tên sản phẩm: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<div class="box">
    <div class="box-body">
        <table class="table table-bordered table-striped datatable slide">
            <thead>
                <tr>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                    </th>
                    <th>
                        Màu sắc
                    </th>

                    @*<th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>*@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            <img src="@item.Product.FeaturedImage" style="max-width:36px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ColorName)
                        </td>

                        @*<td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>*@
                        <td>
                            @Html.ActionLink("Sửa", "UpdatePropertiesColor", new { id = item.ColorID }, new { @class = "btn btn-xs btn-primary" }) |
                            @Html.ActionLink("Xóa", "DeleteProductsColor", new { id = item.ColorID }, new { @class = "btn btn-xs btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
