@model List<FashionGo.Areas.Admin.Controllers.UsersController.UserModel>

@{
    ViewBag.Title = "Quản lý user";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>Danh sách user</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create",null, new { @class = "btn btn-primary" })
</p>
<div class="box">
    <table class="table table-bordered table-striped datatable">
        <tr>
            <th>
               Email
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Username
            </th>
            <th>
                Tên đầy đủ
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Quận/ huyện
            </th>
            <th>
                Vai trò
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DistrictName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.ActionLink("Xem", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-primary" })
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-xs btn-warning" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-danger", onclick = "return confirm('Bạn có chắc muốn xóa?')" })
                </td>
            </tr>
        }

    </table>
</div>
