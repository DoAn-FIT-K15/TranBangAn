@using FashionGo.Models

<style>

    .eshop-cart .eshop-items > d > i {
        font-size: 30px;
        color: #222534;
        cursor: pointer;
    }
    .eshop-cart .eshop-itemss > d > i {
        font-size: 30px;
        color: #222534;
        cursor: pointer;
    }

    .eshop-cart #eshop-cart-total {
        background: #f2533d !important;
        color: #ffffff !important;
        position: absolute;
        top: 0;
        right: 2px;
        border-radius: 100%;
        display: inline-block;
        height: 25px;
        padding: 0;
        text-align: center;
        width: 25px;
        margin: 0;
        cursor: pointer;
    }
</style>

<div class="t3-module module" id="Mod88">
    <div class="module-inner">
        <div class="module-ct">
            <div id="eshop-cart" class="eshop-cart">
                <div class="eshop-items">
                    <d>
                        <i class="fa fa-shopping-cart" style="margin-top: 15px;">&nbsp;</i>
                        <span id="eshop-cart-total">@ShoppingCart.Cart.Count</span>
                    </d>
                </div>
                <div class="eshop-content" id="cart-item" style="display: none;">
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    jQuery(function ($) {
        $(document).ready(function () {
            $('.eshop-itemss').click(function () {
                $('.eshop-contents').slideToggle('fast');
            });
            $('.eshop-contents').mouseleave(function () {
                $('.eshop-contents').hide();
            });

        });
    });
</script>