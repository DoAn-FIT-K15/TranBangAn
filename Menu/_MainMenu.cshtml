                                        <div class="module-inner">
                                            <div class="module-ct">
                                                <div class="custom row">
                                                    @{
                                                        var childCategories = data.ChildCategories();
                                                    }

                                                    @if (childCategories.Count() > 0)
                                                    {

                                                        foreach (var child in childCategories)
                                                        {
