@using System.Web.Configuration
<!DOCTYPE html>
<html lang="vi-Vn" dir="ltr" class='com_eshop view-frontpage itemid-101 home j34 mm-hover'>
<head>
    <base href="@WebConfigurationManager.AppSettings["SiteUrl"].ToString()"/>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="generator" content="QFashion - Thời trang đầm, váy, áo thun, áo khoác...!" />
    <link href="~/Content/images/favicon-fashiongo.png" rel="shortcut icon" type="image/vnd.microsoft.icon" />

    <title>@Html.Raw(ViewBag.Title)</title>

    @RenderSection("HeaderMetas", false)

    @Styles.Render("~/Assets/Frontend/FashionPro")
    @Styles.Render("~/Content/style")

    @Scripts.Render("~/Assets/Frontend/jquery")

    @RenderSection("HeaderScripts", false)

    @Html.Partial("Partials/_HeaderScripts")

</head>

<body class="bd">
    <div id="fb-root"></div>
    <!-- Your Plugin chat code -->
    <div id="fb-customer-chat" class="fb-customerchat">
    </div>
    <script>
        var chatbox = document.getElementById('fb-customer-chat');
        chatbox.setAttribute("page_id", "169856826204598");
        chatbox.setAttribute("attribution", "biz_inbox");
    </script>

    <!-- Your SDK code -->
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                xfbml: true,
                version: 'v18.0'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <div class="t3-wrapper">
        <!-- HEADER -->
        @Html.Action("Header", "Home")

        <!-- slideshow -->
        @Html.Action("_SliderShow", "Home")

        @{ Html.RenderPartial("_Alerts"); }

        @RenderBody()

        <!-- FOOTER -->
        @Html.Action("Footer", "Home")
        <!-- //FOOTER -->
        @Html.Partial("Partials/_ScrollToTop")
    </div>
</body>
@Scripts.Render("~/BootstrapValidator/jquery")

@RenderSection("Scripts", false)
</html>
